{
  "$schema": "https://opencode.ai/config.json",
  "agent": {
    "build": {
      "mode": "primary",
      "model": "moonshotai/kimi-k2",
      "temperature": 0.3,
      "tools": {
        "write": true,
        "edit": true,
        "bash": true,
        "read": true,
        "grep": true,
        "glob": true,
        "webfetch": true,
        "task": true
      }
    },
    "plan": {
      "mode": "primary",
      "model": "anthropic/claude-sonnet-4-5-20250929",
      "temperature": 0.1,
      "tools": {
        "write": false,
        "edit": false,
        "bash": false
      },
      "permission": {
        "edit": "ask",
        "bash": "ask"
      }
    }
  },
  "rules": [
    {
      "pattern": "**/*.py",
      "command": "black --check"
    },
    {
      "pattern": "**/*.{js,ts}",
      "command": "prettier --check"
    }
  ],
  "permission": {
    "edit": "allow",
    "bash": {
      "git *": "allow",
      "npm test": "allow",
      "uv run *": "allow",
      "rm -rf *": "ask",
      "*": "ask"
    }
  }
}